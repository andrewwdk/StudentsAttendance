@model StudentsAttendanceWebsite.Models.Student

<style>
    .options {
        width: 20%;
        background-color: aqua;
    }

    .main-part {
        width: 80%;
        text-align: center;
        font-size: 20px;
    }

    .main-container {
        display: flex;
        flex-wrap: wrap;
    }

    .right-from-photo-part {
        width: 100%;
        margin-left: 180px;
    }

    .rest-part {
        width: 100%;
    }

    .float-unset {
        float: unset;
    }

    .float-left {
        float: left;
    }

    .my-label {
        font-size: 20px;
        padding-top: 0;
        text-align: right;
    }
</style>

<div class="main-container">
    <div class="options">
        @Html.Partial("UserOptions")
    </div>
    <div class="main-part">

        @using (Html.BeginForm("Edit", "Students", new { id = Model.PersonId }, FormMethod.Get))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal main-container">
                <hr />
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="right-from-photo-part">
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.DisplayFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control float-unset" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.BirthDate, htmlAttributes: new { @class = "my-label  col-md-4" })
                        <div class="col-md-5">
                            @Html.DisplayFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.RecordBookNumber, htmlAttributes: new { @class = "col-md-4 my-label" })
                        <div class="col-md-5">
                            @Html.DisplayFor(model => model.RecordBookNumber, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.GroupId, htmlAttributes: new { @class = "col-md-4 my-label" })
                        <div class="col-md-5">
                            @Html.DisplayFor(model => model.Group.Name, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>
                </div>
                @if (User.IsInRole("Администратор"))
                {
                    <div class="rest-part">
                        <div class="form-group">
                            <div class="">
                                <input type="submit" value="Редактировать" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>