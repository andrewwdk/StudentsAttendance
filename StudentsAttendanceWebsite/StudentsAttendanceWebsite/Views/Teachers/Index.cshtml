@using PagedList;
@using PagedList.Mvc;

@model IEnumerable<StudentsAttendanceWebsite.Models.Teacher>

<style>
    .main-container {
        display: flex;
        flex-wrap: wrap;
    }

    .main-content {
        margin: 20px 28%;
        font-size: 20px;
    }

    .main-part {
        width: 80%;
        text-align: center;
    }

    .options {
        width: 20%;
        background-color: aqua;
    }

    .person-container {
        display: flex;
        flex-direction: column;
        padding: 0 15%;
    }

    .search-box {
        display: flex;
        justify-content: center;
        margin-top: 30px;
    }

    .input-font-size {
        font-size: 20px;
        width: 350px;
        margin-right: 30px;
    }
</style>

<div class="main-container">
    <div class="options">
        @Html.Partial("UserOptions")
    </div>
    <div class="main-part">
        <div class="person-container">

            @using (Html.BeginForm("Index", "Teachers", FormMethod.Get))
            {
                <div class="search-box">
                    @Html.TextBox("Search", "", new { @class = "form-control input-font-size" })
                    <input type="submit" value="Найти" class="btn btn-default" />
                </div>
            }

            <div class="form-horizontal main-container">
                <div class="main-content">
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        <div style="display:flex;flex-direction:row;width:400px;">
                            <div> @Html.DisplayFor(model => model.ElementAt(i).FullName) </div>
                        </div>
                    }
                </div>
            </div>

            <div class="search-box">
                @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>
</div>
